<div class="ui-widget-header input-header">
    Fact parameters
</div>

<table class="input-table">
    <tr>
        <td>Fact</td>
        <td><%= text_field_tag "fact", "", :size=>20, :id=>"fact", :class=>"ifield"%></td>
    </tr>
</table>

<div class="input-footer">
    - Fact like location
</div>

<div class="input-buttons">
    <%= button_to_remote "Submit", {:url => {:controller => :facts, :action => :do_facts}, 
                                    :with => "'fact=' + encodeURIComponent(jQuery('#fact').val())"}, 
                                   {:class => "button fg-button ui-state-default ui-corner-all input-button submitbutton",
                                    :onclick => "closePopup();spin();"}%>
    <%= button_to_function "Cancel", "closePopup();", :class => "button fg-button ui-state-default ui-corner-all input-button" %>
</div>

