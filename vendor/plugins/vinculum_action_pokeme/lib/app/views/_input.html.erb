<div class="ui-widget-header input-header"> Imap message </div>

<table class="input-table">
    <tr>
        <td>Recipient</td>
        <td><%= text_field_tag "recipient", "", :size=>20, :id=>"recipient", :class=>"ifield"%></td>
    </tr>
    <tr>
    <tr>
        <td>Subject</td>
        <td><%= text_field_tag "subject", "", :size=>20, :id=>"subject", :class=>"ifield"%></td>
    </tr>
        <td>Message</td>
        <td><%= text_field_tag "message", "", :size=>20, :id=>"message", :class=>"ifield"%></td>
    </tr>
</table>
</div>

<div class="input-buttons">
    <%= button_to_remote "Submit", {:url => {:controller => :pokeme, :action => :do_pokeme}, :with=> "'message=' + jQuery('#message').val() + '&recipient=' + encodeURIComponent(jQuery('#recipient').val()) +'&subject=' + jQuery('#subject').val()"}, {:class=> "button fg-button ui-state-default ui-corner-all input-button", :onclick => "closePopup();spin();"} %>
<%= button_to_function "Cancel", "closePopup();", :class => "button fg-button ui-state-default ui-corner-all input-button" %>
</div>

